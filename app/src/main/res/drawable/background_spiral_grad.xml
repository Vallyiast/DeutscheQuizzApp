<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche 1 : le dégradé -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#b1894e"
                android:endColor="#b39700"
                android:angle="45" />
        </shape>
    </item>

    <!-- Couche 2 : l’image semi-transparente -->
    <item>

        <bitmap
            android:src="@drawable/spiral"
            android:gravity="center"

            android:alpha="0.05" /> <!-- 128 = 50% transparent -->

    </item>

</layer-list>
